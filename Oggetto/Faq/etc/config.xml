<?xml version="1.0" ?>
<config>

    <modules>
        <Oggetto_Faq>
            <version>0.0.1</version>
        </Oggetto_Faq>
    </modules>

    <admin>
        <routers>
            <oggetto_faq_admin>
                <use>admin</use>
                <args>
                    <module>Oggetto_Faq</module>
                    <frontName>oggetto_faq_admin</frontName>
                </args>
            </oggetto_faq_admin>
        </routers>
    </admin>

    <adminhtml>
        <menu>
            <customer module="adminhtml">
                <children>
                    <oggetto_faq module="oggetto_faq">
                        <title>Questions</title>
                        <sort_order>120</sort_order>
                        <action>oggetto_faq_admin/adminhtml_faq</action>
                    </oggetto_faq>
                </children>
            </customer>
        </menu>

        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <oggetto_faq_options>
                                            <title>Store Oggetto Faq Module Section</title>
                                        </oggetto_faq_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <oggetto_faq>
                    <file>oggetto_faq.xml</file>
                </oggetto_faq>
            </updates>
        </layout>
        <routers>
            <oggetto_faq>
                <use>standard</use>
                <args>
                    <module>Oggetto_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </oggetto_faq>
        </routers>
    </frontend>

    <global>
        <blocks>
            <oggetto_faq>
                <class>Oggetto_Faq_Block</class>
            </oggetto_faq>
        </blocks>

        <helpers>
            <oggetto_faq>
                <class>Oggetto_Faq_Helper</class>
            </oggetto_faq>
        </helpers>

        <models>
            <oggetto_faq_adding>
                <class>Oggetto_Faq_Model_Adding</class>
            </oggetto_faq_adding>
            <oggetto_faq>
                <class>Oggetto_Faq_Model</class>
                <resourceModel>oggetto_faq_resource</resourceModel>
            </oggetto_faq>
            <oggetto_faq_resource>
                <class>Oggetto_Faq_Model_Resource</class>
                <entities>
                    <table_questions>
                        <table>oggetto_faq_questions</table>
                    </table_questions>
                </entities>
            </oggetto_faq_resource>
        </models>

        <resources>
            <oggetto_faq_setup>
                <setup>
                    <module>Oggetto_Faq</module>
                    <connection>core_setup</connection>
                </setup>
            </oggetto_faq_setup>
        </resources>
    </global>

</config>