<config>

    <modules>
        <Oggetto_Faq>
            <version>0.0.1</version>
        </Oggetto_Faq>
    </modules>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Oggetto_Faq after="Mage_Adminhtml">Oggetto_Faq_Adminhtml</Oggetto_Faq>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <frontend>
        <layout>
            <updates>
                <oggetto_faq>
                    <file>oggetto_faq.xml</file>
                </oggetto_faq>
            </updates>
        </layout>
        <routers>
            <oggetto_faq>
                <use>standard</use>
                <args>
                    <module>Oggetto_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </oggetto_faq>
        </routers>
    </frontend>

    <global>
        <blocks>
            <oggetto_faq>
                <class>Oggetto_Faq_Block</class>
            </oggetto_faq>
        </blocks>

        <helpers>
            <oggetto_faq>
                <class>Oggetto_Faq_Helper</class>
            </oggetto_faq>
        </helpers>

        <models>
            <oggetto_faq>
                <class>Oggetto_Faq_Model</class>
                <resourceModel>oggetto_faq_resource</resourceModel>
            </oggetto_faq>
            <oggetto_faq_resource>
                <class>Oggetto_Faq_Model_Resource</class>
                <entities>
                    <table_questions>
                        <table>oggetto_faq_questions</table>
                    </table_questions>
                </entities>
            </oggetto_faq_resource>
        </models>

        <resources>
            <oggetto_faq_setup>
                <setup>
                    <module>Oggetto_Faq</module>
                    <connection>core_setup</connection>
                </setup>
            </oggetto_faq_setup>
        </resources>
    </global>

    <default>
        <oggetto_faq_options>
            <disable_options>
                <disable_adding>0</disable_adding>
            </disable_options>
        </oggetto_faq_options>
    </default>

    <phpunit>
        <suite>
            <modules>
                <Oggetto_Faq />
            </modules>
        </suite>
    </phpunit>

</config>
