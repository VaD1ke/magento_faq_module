<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <oggetto_faq_config translate="label" module="oggetto_faq">
            <label>Oggetto Extensions</label>
            <sort_order>99999</sort_order>
        </oggetto_faq_config>
    </tabs>
    <sections>
        <oggetto_faq_options translate="label" module="oggetto_faq">
            <label>FAQ Config Options</label>
            <tab>oggetto_faq_config</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <disable_options translate="label">
                    <label>Disabling options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <disable_adding>
                            <label>Disable adding questions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>oggetto_faq_adding/select</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </disable_adding>
                    </fields>
                </disable_options>
            </groups>
        </oggetto_faq_options>
    </sections>
</config>
